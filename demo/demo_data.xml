<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="1">
		<!-- Sucursales Demo -->
		<record id="branch_centro" model="res.partner">
			<field name="name">Sucursal Centro</field>
			<field name="is_company">True</field>
			<field name="supplier_rank">0</field>
			<field name="customer_rank">0</field>
			<field name="street">Calle Principal 123</field>
			<field name="city">Ciudad Centro</field>
		</record>

		<record id="branch_norte" model="res.partner">
			<field name="name">Sucursal Norte</field>
			<field name="is_company">True</field>
			<field name="supplier_rank">0</field>
			<field name="customer_rank">0</field>
			<field name="street">Avenida Norte 456</field>
			<field name="city">Zona Norte</field>
		</record>

		<!-- Roles Demo -->
		<record id="role_waiter" model="work.role">
			<field name="name">Mesero</field>
			<field name="description">Atender mesas, tomar ordenes y servir alimentos</field>
			<field name="active">True</field>
		</record>

		<record id="role_chef" model="work.role">
			<field name="name">Cocinero</field>
			<field name="description">Preparar alimentos y mantener la cocina en orden</field>
			<field name="active">True</field>
		</record>

		<record id="role_cashier" model="work.role">
			<field name="name">Cajero</field>
			<field name="description">Manejar pagos y caja registradora</field>
			<field name="active">True</field>
		</record>

		<!-- Empleados Demo -->
		<record id="employee_juan" model="hr.employee">
			<field name="name">Juan Perez</field>
			<field name="work_email">juan.perez@empresa.com</field>
			<field name="work_phone">555-0101</field>
			<field name="active">True</field>
		</record>

		<record id="employee_maria" model="hr.employee">
			<field name="name">Maria Gonzalez</field>
			<field name="work_email">maria.gonzalez@empresa.com</field>
			<field name="work_phone">555-0102</field>
			<field name="active">True</field>
		</record>

		<record id="employee_carlos" model="hr.employee">
			<field name="name">Carlos Lopez</field>
			<field name="work_email">carlos.lopez@empresa.com</field>
			<field name="work_phone">555-0103</field>
			<field name="active">True</field>
		</record>

		<!-- ConfiguraciÃ³n Demo -->
		<record id="demo_config_notification_hours" model="ir.config_parameter">
			<field name="key">shift_planning.notification_advance_hours</field>
			<field name="value">24</field>
		</record>

		<record id="demo_config_reminder_hours" model="ir.config_parameter">
			<field name="key">shift_planning.reminder_hours</field>
			<field name="value">2</field>
		</record>

		<record id="demo_config_auto_assign" model="ir.config_parameter">
			<field name="key">shift_planning.auto_assign_enabled</field>
			<field name="value">True</field>
		</record>

		<record id="demo_config_max_daily_hours" model="ir.config_parameter">
			<field name="key">shift_planning.max_daily_hours</field>
			<field name="value">8.0</field>
		</record>

		<record id="demo_config_min_rest_hours" model="ir.config_parameter">
			<field name="key">shift_planning.min_rest_between_shifts</field>
			<field name="value">8.0</field>
		</record>
	</data>
</odoo>