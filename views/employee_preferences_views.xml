<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Form para Preferencias de Empleados -->
    <record id="view_employee_shift_preferences_form" model="ir.ui.view">
        <field name="name">employee.shift.preferences.form</field>
        <field name="model">employee.shift.preferences</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="employee_id" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Preferencias de Horario">
                            <field name="preferred_morning"/>
                            <field name="preferred_afternoon"/>
                            <field name="preferred_night"/>
                        </group>
                        
                        <group string="Límites de Trabajo">
                            <field name="max_hours_per_day"/>
                            <field name="max_hours_per_week"/>
                            <field name="min_rest_hours"/>
                        </group>
                    </group>
                    
                    <group string="Días Preferidos">
                        <group>
                            <field name="preferred_monday"/>
                            <field name="preferred_tuesday"/>
                            <field name="preferred_wednesday"/>
                            <field name="preferred_thursday"/>
                        </group>
                        <group>
                            <field name="preferred_friday"/>
                            <field name="preferred_saturday"/>
                            <field name="preferred_sunday"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Sucursales Preferidas">
                            <field name="preferred_branch_ids" widget="many2many_tags"/>
                        </group>
                        <group string="Roles Preferidos">
                            <field name="preferred_role_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Configuraciones Especiales">
                            <field name="available_for_urgent"/>
                            <field name="notification_advance_hours"/>
                        </group>
                        <group string="Estado Actual">
                            <field name="is_available_today"/>
                            <field name="current_week_hours"/>
                        </group>
                    </group>
                    
                    <group string="Notas Adicionales">
                        <field name="notes" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Tree para Preferencias -->
    <record id="view_employee_shift_preferences_tree" model="ir.ui.view">
        <field name="name">employee.shift.preferences.tree</field>
        <field name="model">employee.shift.preferences</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id"/>
                <field name="preferred_morning"/>
                <field name="preferred_afternoon"/>
                <field name="preferred_night"/>
                <field name="max_hours_per_day"/>
                <field name="available_for_urgent"/>
                <field name="is_available_today"/>
                <field name="current_week_hours"/>
            </tree>
        </field>
    </record>

    <!-- Acción para Preferencias -->
    <record id="action_employee_shift_preferences" model="ir.actions.act_window">
        <field name="name">Preferencias de Turnos</field>
        <field name="res_model">employee.shift.preferences</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Vista Form del Wizard de Asignación Automática -->
    <record id="view_shift_auto_assign_wizard_form" model="ir.ui.view">
        <field name="name">shift.auto.assign.wizard.form</field>
        <field name="model">shift.auto.assign.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>Asignación Automática de Turnos</h1>
                    </div>
                    
                    <!-- Mostrar resultados si ya se ejecutó -->
                    <div class="alert alert-success" role="alert" invisible="not assigned_count">
                        <strong>✓ Asignación Completada</strong><br/>
                        <span>Turnos asignados: <field name="assigned_count" readonly="1"/></span><br/>
                        <span>Turnos no asignados: <field name="failed_count" readonly="1"/></span>
                    </div>
                    
                    <div class="alert alert-info" role="alert" invisible="context.get('show_results', False)">
                        <strong>Información:</strong> 
                        <span>Turnos a asignar: <field name="shifts_to_assign" readonly="1"/></span> | 
                        <span>Empleados disponibles: <field name="available_employees" readonly="1"/></span>
                    </div>
                    
                    <group invisible="context.get('show_results', False)">
                        <group string="Filtros de Turnos">
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="branch_ids" widget="many2many_tags"/>
                            <field name="role_ids" widget="many2many_tags"/>
                        </group>
                        
                        <group string="Opciones de Asignación">
                            <field name="assignment_mode"/>
                            <field name="use_preferences"/>
                            <field name="consider_skills"/>
                            <field name="respect_work_limits"/>
                        </group>
                    </group>
                    
                    <group string="Configuraciones Avanzadas" invisible="context.get('show_results', False)">
                        <group>
                            <field name="max_shifts_per_employee"/>
                            <field name="priority_urgent_shifts"/>
                        </group>
                    </group>
                    
                    <!-- Log de resultados -->
                    <group string="Detalles de Asignación" invisible="not assignment_log">
                        <field name="assignment_log" nolabel="1" readonly="1"/>
                    </group>
                </sheet>
                
                <footer>
                    <button name="action_preview_assignment" string="Vista Previa" 
                            type="object" class="btn-info"
                            invisible="context.get('show_results', False)"/>
                    <button name="action_assign_shifts" string="Asignar Turnos" 
                            type="object" class="btn-primary"
                            invisible="context.get('show_results', False)"/>
                    <button name="action_view_assigned_shifts" string="Ver Asignaciones" 
                            type="object" class="btn-success"
                            invisible="not assigned_count"/>
                    <button string="Cerrar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción para el Wizard -->
    <record id="action_shift_auto_assign_wizard" model="ir.actions.act_window">
        <field name="name">Asignación Automática</field>
        <field name="res_model">shift.auto.assign.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Extender vista de empleados para incluir preferencias -->
    <record id="view_employee_form_shift_preferences" model="ir.ui.view">
        <field name="name">hr.employee.form.shift.preferences</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_configure_shift_preferences"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-calendar">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="availability_score" widget="integer"/>
                        </span>
                        <span class="o_stat_text">Disponibilidad</span>
                    </div>
                </button>
            </xpath>
            
            <xpath expr="//page[@name='hr_settings']" position="after">
                <page string="Preferencias de Turnos" name="shift_preferences">
                    <group>
                        <group>
                            <field name="has_shift_preferences"/>
                        </group>
                    </group>
                    
                    <field name="shift_preferences_ids">
                        <tree>
                            <field name="preferred_morning"/>
                            <field name="preferred_afternoon"/>
                            <field name="preferred_night"/>
                            <field name="max_hours_per_day"/>
                            <field name="available_for_urgent"/>
                            <field name="current_week_hours"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Menús -->
    <menuitem id="menu_employee_shift_preferences"
              name="Preferencias de Empleados"
              parent="menu_shift_planning_root"
              action="action_employee_shift_preferences"
              sequence="30"/>
              
    <menuitem id="menu_shift_auto_assign"
              name="Asignación Automática"
              parent="menu_shift_planning_root"
              action="action_shift_auto_assign_wizard"
              sequence="35"/>
</odoo>