<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- Vista del Dashboard Simplificado -->
	<record id="view_shift_dashboard" model="ir.ui.view">
		<field name="name">shift.dashboard</field>
		<field name="model">shift.dashboard</field>
		<field name="arch" type="xml">
			<form create="0" edit="0" delete="0">
				<sheet>
					<div class="o_dashboard">
						<!-- Título Principal -->
						<div class="row">
							<div class="col-12">
								<h1 class="mb-3">📊 Dashboard de Turnos</h1>
								<div class="alert alert-info" role="alert">
									<strong>Resumen Ejecutivo:</strong> Vista general del sistema de turnos y asignaciones
								</div>
							</div>
						</div>

						<!-- Métricas Básicas -->
						<div class="row mb-4">
							<div class="col-md-3">
								<div class="card bg-primary text-white">
									<div class="card-body text-center">
										<h2 class="card-title">
											<i class="fa fa-calendar"></i>
											<span>--</span>
										</h2>
										<p class="card-text">Turnos Programados</p>
									</div>
								</div>
							</div>
							<div class="col-md-3">
								<div class="card bg-success text-white">
									<div class="card-body text-center">
										<h2 class="card-title">
											<i class="fa fa-users"></i>
											<span>--</span>
										</h2>
										<p class="card-text">Empleados Asignados</p>
									</div>
								</div>
							</div>
							<div class="col-md-3">
								<div class="card bg-info text-white">
									<div class="card-body text-center">
										<h2 class="card-title">
											<i class="fa fa-check-circle"></i>
											<span>--</span>
										</h2>
										<p class="card-text">Presentes</p>
									</div>
								</div>
							</div>
							<div class="col-md-3">
								<div class="card bg-warning text-white">
									<div class="card-body text-center">
										<h2 class="card-title">
											<i class="fa fa-clock-o"></i>
											<span>--</span>
										</h2>
										<p class="card-text">Pendientes</p>
									</div>
								</div>
							</div>
						</div>

						<!-- Acciones Rápidas -->
						<div class="row mb-4">
							<div class="col-12">
								<h3>🚀 Acciones Rápidas</h3>
							</div>
							<div class="col-md-3">
								<button class="btn btn-primary btn-block" type="object" name="action_new_shift">
									<i class="fa fa-plus"></i> Nuevo Turno
								</button>
							</div>
							<div class="col-md-3">
								<button class="btn btn-success btn-block" type="object" name="action_auto_assign">
									<i class="fa fa-magic"></i> Asignación Automática
								</button>
							</div>
							<div class="col-md-3">
								<button class="btn btn-info btn-block" type="object" name="action_generate_report">
									<i class="fa fa-file-text"></i> Generar Reporte
								</button>
							</div>
							<div class="col-md-3">
								<button class="btn btn-warning btn-block" type="object" name="action_open_config">
									<i class="fa fa-cog"></i> Configuración
								</button>
							</div>
						</div>

						<!-- Información Útil -->
						<div class="row">
							<div class="col-md-6">
								<div class="card">
									<div class="card-header">
										<h5>📋 Próximos Turnos</h5>
									</div>
									<div class="card-body">
										<p class="text-muted">
											Usa el menú "Programación Esperada" para ver los próximos turnos programados.
										</p>
									</div>
								</div>
							</div>
							<div class="col-md-6">
								<div class="card">
									<div class="card-header">
										<h5>👥 Gestión de Empleados</h5>
									</div>
									<div class="card-body">
										<p class="text-muted">
											Configura las preferencias de empleados para optimizar las asignaciones.
										</p>
									</div>
								</div>
							</div>
						</div>
					</div>
				</sheet>
			</form>
		</field>
	</record>

	<!-- Acción para el Dashboard -->
	<record id="action_shift_dashboard" model="ir.actions.act_window">
		<field name="name">Dashboard de Turnos</field>
		<field name="res_model">shift.dashboard</field>
		<field name="view_mode">form</field>
		<field name="target">current</field>
	</record>

	<!-- Menú principal que abre el dashboard -->
	<menuitem id="menu_shift_dashboard"
              name="Dashboard"
              parent="menu_shift_planning_root"
              action="action_shift_dashboard"
              sequence="1"/>
</odoo>